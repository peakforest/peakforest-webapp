<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http auto-config="true">
		<!-- rights -->
		<intercept-url pattern="/import*" access="ROLE_USER" />
		<intercept-url pattern="/upload-compound-file*" access="ROLE_USER" />
		<intercept-url pattern="/add-compounds*" access="ROLE_USER" />
		<intercept-url pattern="/update-compound*" access="ROLE_USER" />
		<intercept-url pattern="/backoffice*" access="ROLE_ADMIN" />
		<!-- login / logout -->
		<form-login login-page="/login" default-target-url="/home"
			always-use-default-target="true" authentication-failure-url="/loginfailed" />
		<logout logout-success-url="/" />
